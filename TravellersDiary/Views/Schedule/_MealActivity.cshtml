@model List<TravellersDiary.Models.Schedule.MealActivityModel>


<div class="col-md-12 mb-4">
    <div class="card border-bottom-warning shadow h-100 py-2  bg-warning text-dark">
        <div class="card-body">
            <div class="no-gutters align-items-center text-center">
                <h5 class="d-inline-block text-dark ">Yemek Aktiviteleri</h5>
            </div>
        </div>
    </div>
</div>
@foreach (var item in Model)
{
    <div class="col-md-12 mb-4">
        <div class="card border-bottom-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="no-gutters align-items-center">
                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                        <h5 class="d-inline-block"> @item.ACT_TITLE</h5>
                        <h5 class=" float-right">@item.COST_OF TL</h5>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-0 font-weight-bold text-gray-800">@item.ACT_DETAILS</div>
                            <hr />
                        </div>
                        <div class="col-md-9">
                            <div class="mb-0 font-weight-bold text-gray-800">@item.MEAL_NAME</div>
                            <div class="mb-0 font-weight-bold text-gray-800">
                                PUAN:
                                @for (int i = 0; i < item.RATING; i++)
                                {
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-star-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                    </svg>
                                }

                                <div class="mb-0 font-weight-bold text-gray-800">@Html.Action("GetCompany", "Schedule", new { id = item.COMPANY_ID })</div>
                            </div>
                        </div>
                        <div class="col-md-3 row">
                            <div class="mb-0 font-weight-bold text-gray-800 "> @item.ACT_START_TIME</div>
                            <div class="mb-0 font-weight-bold text-gray-800 "> @item.ACT_FNISH_TIME</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

