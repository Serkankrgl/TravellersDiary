@model IEnumerable<TravellersDiary.Models.Company.CompanyModel>

    <div class="mx-2">
        <div class="btn-group" role="group" aria-label="Basic example">
            <button type="button" class="btn  mb-3 bg-warning border-warning" data-toggle="modal" data-target="#createVacation">Şirket Oluştur</button>
        </div>
        <table class="table table-dark table-striped">
            <tr>
                <th>
                    <h5>Şirket</h5>
                </th>
                <th>
                   <h5>Şirket Hakkında</h5>
                </th>
                <th>
                    <h5>Şirket Web Sitesi</h5>
                </th>
                <th>
                    <h5>Açılış Zamanı</h5>
                </th>
                <th>
                    <h5>Kapanış Zamanı</h5>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CH_COMP_NAME)
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem => item.TXT_COMP_DESCRIPTION)
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem => item.TXT_COMP_SITE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TM_OPENING_TIME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TM_CLOSING_TIME)
                    </td>
                    <td>

                    </td>
                </tr>
            }

        </table>
        <div class="modal fade" id="createVacation" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Şirket Oluştur </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("CreateCompany", "Company", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Şirket Adı</label>
                                <input type="text" class="form-control" id="recipient-name" name="CH_COMP_NAME" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Kalite</label>
                                <select class="form-control" id="scheduledate" name="INT_QUALITY">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="message-text" class="col-form-label">Hakkında:</label>
                                <textarea class="form-control" id="message-text" name="TXT_COMP_DESCRIPTION"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="message-text" class="col-form-label">Web Site Linki:</label>
                                <textarea class="form-control" id="message-text" name="TXT_COMP_SITE"></textarea>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="recipient-name" class="col-form-label">Açılış Saati:</label>
                                    <input type="text" class="form-control" name="TM_OPENING_TIME" id="timepicker5">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="recipient-name" class="col-form-label">Kapanış Saati:</label>
                                    <input type="text" class="form-control" name="TM_CLOSING_TIME" id="timepicker6">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal Et</button>
                                <button type="submit" class="btn btn-primary">Oluştur</button>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>

    </div>
