<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/Content/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <link href="~/Content/sb-admin-2.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/datapickerCSS")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="page-top"   >

    <!-- Page Wrapper -->
    <div id="wrapper" >

        <!-- Sidebar -->
        <ul class="navbar-nav sidebar sidebar-dark accordion bg-warning border-warning" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <div class="sidebar-brand d-flex align-items-center justify-content-center">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Traveller's <sup>Diary</sup></div>
            </div>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                @Html.ActionLink("Ana Sayfa", "Index", "Home", null, new { @class = "nav-link" })
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">


            <li class="nav-item active">
                @Html.ActionLink("Profilim", "Index", "Profile", null, new { @class = "nav-link" })
            </li>

            <li class="nav-item active">
                @Html.ActionLink("Hatıralarım", "Index", "Memory", null, new { @class = "nav-link" })
            </li>

            <li class="nav-item active">
                @Html.ActionLink("Hatırlatmalar", "Index", "Reminder", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item active">
                @Html.ActionLink("Firmalar", "Index", "Company", null, new { @class = "nav-link" })
            </li>
            <!-- Nav Item - Pages Collapse Menu -->

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column" style="background-color:#5A5560;">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 ">@HttpContext.Current.User.Identity.Name</span>
                                <img class="img-profile rounded-circle"
                                     src="~/Assets/pimg.jpg">
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                 aria-labelledby="userDropdown">
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <!-- /.container-fluid -->
                
                @RenderBody()
                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; Skuruoglu</span>
                        </div>
                    </div>
                </footer>
                <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->
        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <!-- Logout Modal-->
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        @Html.ActionLink("Çıkış Yap", "Login", "Auth", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/datepickerJS")
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.3/themes/smoothness/jquery-ui.css" type="text/css" />
    <script src="https://code.jquery.com/jquery-2.2.2.js"></script>
    <script src="https://code.jquery.com/ui/1.11.3/jquery-ui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-timepicker/1.8.1/jquery.timepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-timepicker/1.8.1/jquery.timepicker.min.css" type="text/css" />
   
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dt_date_picker').datepicker({
                showOptions: { speed: 'slow' },
                changeMonth: false,
                changeYear: false,
                dateFormat: 'dd-mm-yy',
                gotoCurrent: true
            });
            $('#dt_date_picker1').datepicker({
                showOptions: { speed: 'slow' },
                changeMonth: false,
                changeYear: false,
                dateFormat: 'dd-mm-yy',
                gotoCurrent: true
            });
            $('#dt_date_picker3').datepicker({
                showOptions: { speed: 'slow' },
                changeMonth: false,
                changeYear: false,
                dateFormat: 'dd-mm-yy',
                gotoCurrent: true
            });
            $('#dt_date_picker4').datepicker({
                showOptions: { speed: 'slow' },
                changeMonth: false,
                changeYear: false,
                dateFormat: 'dd-mm-yy',
                gotoCurrent: true
            });
            $('#timepicker1').timepicker();
            $('#timepicker2').timepicker();
            $('#timepicker3').timepicker();
            $('#timepicker4').timepicker();
            $('#timepicker5').timepicker();
            $('#timepicker6').timepicker();
        });
        

   

    </script>


</body>
</html>
